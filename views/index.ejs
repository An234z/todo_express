<!DOCTYPE html>
<html lang="en">
<head>
    <title>TO DO LIST</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
</head>
<body>
        <div class="container">
          <!-- Page Content goes here -->
          <div class="row">
            <div class="col s12 m6">
              <div class="card">
                <div class="card-content">
                  <span class="card-title">TO DO LIST</span>
                  <div class="row">
                    <form class="col s12" method="post" action="/">
                    <div class="input-field col s12">
                      <div class="row">
                      <input placeholder="Task" id="task" type="text" name="task">
                      <label for="task">Insert Task</label>
                    </div>
                      <a class="waves-effect waves-light btn">ADD TASK</a>
                  <div> <ul class="collection">
                    <% console.log(tasks) %>
                    <% tasks.forEach(function(task) { %>
                      <li class="collection-item"><%= task %></li>
                    <% }) %>
                  </ul>
          </div>
    <!-- Compiled and minified  JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>
